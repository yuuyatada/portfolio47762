 <h4>食べ方詳細</h4>
  
  
  <h4>食べ方</h4>
  <%= @recipe.title %>
  
  <h4>イメージ画像</h4>
  <% if @recipe.recipe_image.attached? %>
    <%= image_tag @recipe.recipe_image, size: "200x200" %>
  <% else %>
    <%= image_tag 'default-image', size: "200x200" %>
  <% end %>
  <h4>本文</h4>
  <%= @recipe.main_text %>
  
  <h6>いいね機能</h6>
  <% if @recipe.favorited?(current_user) %>
    <%= button_to recipe_favorites_path(@recipe), method: :delete do %>
        <span style="color:red;">❤︎</span>
         <%= @recipe.favorites.count %>
    <% end %>
<% else %>
    <%= button_to recipe_favorites_path(@recipe), method: :post do %>
        <span>❤︎</span>
         <%= @recipe.favorites.count %>
    <% end %>
<% end %>
  
  <%= link_to " ユーザ編集",  edit_recipe_path, class: "glyphicon glyphicon-pencil btn btn-success" %>
  