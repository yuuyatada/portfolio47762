 <h4>食べ方詳細</h4>
  
  
  <h4>食べ方</h4>
  <%= @recipe.title %>
  
  <h4>イメージ画像</h4>
  <% if @recipe.recipe_image.attached? %>
    <%= image_tag @recipe.recipe_image, size: "200x200" %>
  <% else %>
    <%= image_tag 'default-image', size: "200x200" %>
  <% end %>
  <h4>本文</h4>
  <%= @recipe.main_text %>
  <%= link_to " ユーザ編集",  edit_recipe_path, class: "glyphicon glyphicon-pencil btn btn-success" %>
  <h6>いいね機能</h6>
  <td id="favorite_buttons_<%= @recipe.id %>">
  <%= render "favorites/favorite", recipe: @recipe %>
  </td>
  <td>コメント数：<%= @recipe.user_comments.count %></td>
  <div id="comments-area"><%= render "user_comments/comment",recipe: @recipe,user_comment: @user_comment %></div>
  <div><%= render "user_comments/usercomment",recipe: @recipe%></div>
  
  

  