 <h4>食べ方詳細</h4>
 <%= form_for(@recipe) do |f| %> 
  
  <h4>食べ方</h4>
 <%= f.label :"タイトル", class: "col-sm-3 control-label" %>
 <%= f.text_field :title, class: "form-control title" %>
  
  <h4>イメージ画像</h4>
  <%= f.file_field :recipe_image, accept: "image/*" %>
  <h4>本文</h4>
   <%= f.label :"食べ方", class: "col-sm-3 control-label" %>
   <%= f.text_field :main_text, class: "form-control main_text" %>
   
   <%= f.submit class: "btn btn-secondary" %>
<% end %>
  