 <h4>食べ方詳細</h4>
 <%= form_for(@recipe) do |f| %> 
  
  <h4>食べ方</h4>
 <%= f.label :"タイトル", class: "col-sm-3 control-label" %>
 <%= f.text_field :title, class: "form-control title" %>
  
  <h4>イメージ画像</h4>
  <%= f.file_field :recipe_image, accept: "image/*" %>
  <h4>本文</h4>
   <%= f.label :"食べ方", class: "col-sm-3 control-label" %>
   <%= f.text_field :main_text, class: "form-control main_text" %>
   <h4>使用した品種</h4>
    <div class='form-group'>
        <%= f.collection_select(:breed_id, Breed.all, :id, :name) %>
    </div>
   <h4>公開/非公開設定</h4>
 <%= f.label :is_active, "公開", value: true %>
 <%= f.radio_button :is_active, 'true' %>
 <%= f.label :is_active, "非公開", value: false %>
 <%= f.radio_button :is_active,'false' %>
   
   <%= f.submit class: "btn btn-secondary" %>
<% end %>
  