<h1>新規レシピ投稿画面</h1>

<%= form_with model: @recipe, url: '/recipes', method: :post do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>イメージ画像</h4>
  <%= f.file_field :recipe_image, accept: "image/*" %>
  <h4>本文</h4>
  <%= f.text_area :main_text %>
  <h4>公開/非公開設定</h4>
 <%= f.label :is_active, "公開", value: true %>
 <%= f.radio_button :is_active, 'true' %>
 <%= f.label :is_active, "非公開", value: false %>
 <%= f.radio_button :is_active,'false' %>
  
  <%= f.submit '投稿' %>
  
<% end %>