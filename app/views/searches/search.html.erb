<h2>レシピ検索結果</h2>

<table class="table table-hover table-inverse">
      <% if @recipes.present? %>
      <% @recipes.each do |result| %>
     
        <tr>
    <% if result.recipe_image.attached? %>
    <%= image_tag result.recipe_image, size: "200x200" %>
    <% else %>
    <%= image_tag 'default-image', size: "200x200" %>
    <% end %>
          <td><%= result.title %></td>
          <td><%= result.main_text %></td>
        </tr>
     <% end %>
     <% end %>
      <% if @recipes.size == 0 %>
 　　　<p>検索結果がありませんでした</p>
 　　　　<% end %>
</table>