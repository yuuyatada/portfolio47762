<%= form_for(@user) do |f| %>
<%= f.label :"ニックネーム", class: "col-sm-3 control-label" %>
<%= f.text_field :name, class: "form-control user_name" %>
<%= f.label :"アイコン", class: "col-sm-3 control-label" %>
<%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
<%= f.label :"一言メッセージ", class: "col-sm-3 control-label" %>
<%= f.text_field :message, class: "form-control user_message" %>

<%= f.submit class: "btn btn-secondary" %>

<% end %>