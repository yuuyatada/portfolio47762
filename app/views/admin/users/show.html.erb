<div class="container">
    <div class="row">
    <div class="my-5 col-8">
      <% if flash[:success].present? %>
        <% flash.each do |key, value| %>
        <div class="mb-4">
          <span class="alert alert-success alert-dismissible" role="alert">
             <%= content_tag(:span, value, class: key) %>
            <button class="close", data-dismiss="alert">☓</button>
          </span>
        </div>
        <% end %>
      <% end %>
        <% if @user.present? %>
            <span class ="rounded bg-light py-2 px-3 font-weight-bold"><%= @user.name %>さんの会員詳細</span>
            <table class="mt-3 table table-bordered rounded-top">
                <tbody>
                    <tr>
                      <th class="col-3 table-active">会員ID</th>
                      <td class="col-6"><%= @user.id %></td>
                    </tr>
                    <tr>
                      <th class="col-3 table-active">ニックネーム</th>
                      <td><%= @user.name %></td>
                    </tr>
                    <tr>
                      <th class="col-3 table-active">メールアドレス</th>
                      <td><%= @user.email %></td>
                    </tr>
                    <tr>
                      <th class="col-3 table-active">会員ステータス</th>
                      <td>
                       <% if @user.is_deleted == true %>
                     <span class="font-weight-bold text-secondary"><%= @user.status %></span>
                     <% else %>
                     <span class="font-weight-bold text-success"><%= @user.status %></span>
                     <% end %>
                      </td>
                    </tr>
                </tbody>
            </table>
            <div class ="mx-auto text-center">
              <%= link_to "編集する", edit_admin_user_path(@user.id), class:"btn btn-success btn-lg" %>
              <%= link_to "戻る", admin_users_path, class:"btn btn-lg btn-info" %>
            </div>
            <% else %>
              <p>会員登録はありません</p>
            <% end %>
    </div>
    </div>
</div>